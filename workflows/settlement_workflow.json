{
    "name": "settlement_workflow",
    "description": "Workflow to handle settlement process",
    "version": 1,
    "tasks": [
      {
        "name": "reconcile_trade",
        "taskReferenceName": "reconcileTrade",
        "type": "SIMPLE",
        "inputParameters": {
          "tradeDetails": "${workflow.input.settlement}"
        }
      },
      {
        "name": "finalize_settlement",
        "taskReferenceName": "finalizeSettlement",
        "type": "SIMPLE",
        "inputParameters": {
          "reconciliationResult": "${reconcileTrade.output.result}"
        }
      }
    ],
    "outputParameters": {
      "settlementStatus": "${finalizeSettlement.output.status}"
    },
    "schemaVersion": 2
  }
  